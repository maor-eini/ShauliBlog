@model ShauliBlog.ViewModels.FanFormViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Heading</h2>
<div id="mainContent">
    
    @using (Html.BeginForm(Model.Action, "FanClub", FormMethod.Post, new { @class= "form"}))
    {
        <span>All the fields are <span id="required">required</span>.</span>
        @Html.HiddenFor(m => m.Id)
        <div>
            @Html.LabelFor(m => m.Name ,new { @class= "formLabel" })
            @Html.TextBoxFor(m => m.Name, new { autofocus = "autofocus" , @class="formField"})
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div>
            @Html.LabelFor(m => m.LastName, new { @class = "formLabel" })
            @Html.TextBoxFor(m => m.LastName , new { @class="formField"})
            @Html.ValidationMessageFor(m => m.LastName)
        </div>
        <div>
            @Html.LabelFor(m => m.Gender, new { @class = "formLabel" })
            @Html.DropDownListFor(m => m.Gender, new SelectList(Model.GenderList, "Value", "Text" ),new { @class="formField"})
            @Html.ValidationMessageFor(m => m.Gender)
        </div>
        <div>
            @Html.LabelFor(m => m.DateOfBirth, new { @class = "formLabel" })
            @Html.TextBoxFor(m => m.DateOfBirth, new { placeholder = "eg 24/11/1989", @class = "formField" })
            @Html.ValidationMessageFor(m => m.DateOfBirth)
        </div>
        <div>
            @Html.LabelFor(m => m.SeniorityInYears, new { @class = "formLabel" })
            @Html.TextBoxFor(m => m.SeniorityInYears, new { placeholder = "eg 0", @class = "formField" })
            @Html.ValidationMessageFor(m => m.SeniorityInYears)
        </div>
        <button type="submit">Save</button>
    }
</div>

